# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/face_recognition_db
DATABASE_TEST_URL=postgresql://username:password@localhost:5432/face_recognition_test_db

# Model Configuration
MODEL_PATH=models/trained/
CHECKPOINT_PATH=models/checkpoints/
FEATURE_DIMENSION=512
RECOGNITION_THRESHOLD=0.85

# Camera Configuration
CAMERA_INDEX=0
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=30
ENCRYPTION_KEY=your-encryption-key-here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Hardware Configuration
DOOR_CONTROLLER_PORT=/dev/ttyUSB0
DISPLAY_PORT=/dev/ttyUSB1

# Training Configuration
BATCH_SIZE=32
LEARNING_RATE=0.001
NUM_EPOCHS=100
NUM_WORKERS=4

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=False

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,bmp
UPLOAD_PATH=data/uploads/